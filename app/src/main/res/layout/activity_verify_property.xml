<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <include layout="@layout/include_toolbar"></include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:textColor="@color/botones"
            android:textSize="@dimen/text_size_titles"
            android:text="Verifica Propiedad del Tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/text_size_titles"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:id="@+id/numtar_verify"
            android:layout_marginTop="20dp"
            android:text="tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="30dp"
            android:text="@string/registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:textColorHint="@color/colorPrimary"
                android:maxLength="4"
                android:inputType="number"
                android:id="@+id/txt_primeros_registro"
                android:hint="primeros"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColorHint="@color/colorPrimary"
                android:gravity="center"
                android:text="XXXX-XXXX"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:textColorHint="@color/colorPrimary"
                android:maxLength="4"
                android:inputType="number"
                android:id="@+id/txt_ultimos_registro"
                android:hint="Ãºltimos"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <Button
            android:elevation="@dimen/elevacion"
            android:id="@+id/btn_continuar_verify"
            android:textColor="@color/fuentebotones"
            android:background="@color/botones"
            android:text="Continuar"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="@dimen/AnchoBoton"
            android:layout_height="@dimen/altoBoton" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>