<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/login">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="16dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:focusable="true"
            android:focusableInTouchMode="true">

        <ImageView
            android:contentDescription="Logo"
            android:elevation="@dimen/elevacion"
            android:layout_gravity="center"
            android:src="@drawable/app_tutag_512"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Ingrese los datos de su cuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="7dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/account"
            android:tint="@color/botones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="textCapWords"
            android:textColorHint="@color/colorPrimary"
            android:id="@+id/txt_usuario_login"
            android:layout_marginTop="10dp"
            android:hint="Usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_action_communication_vpn_key"
                android:tint="@color/botones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:textColorHint="@color/colorPrimary"
                android:inputType="textPassword"
                android:id="@+id/txt_pwd_login"
                android:layout_marginTop="10dp"
                android:hint="Contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            </LinearLayout>
        <Button
            android:layout_gravity="center"
            android:elevation="@dimen/elevacion"
            android:background="@color/botones"
            android:textColor="@color/fuentebotones"
            android:id="@+id/btnLogin"
            android:text="Login"
            android:layout_marginTop="15dp"
            android:layout_width="200sp"
            android:layout_height="30sp" />

        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="¿no tienes usuario?"
            android:layout_width="200sp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_gravity="center"
            android:elevation="@dimen/elevacion"
            android:background="@color/botones"
            android:textColor="@color/fuentebotones"
            android:id="@+id/btnRegistrase"
            android:text="Registrate"
            android:layout_width="200sp"
            android:layout_height="30sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>