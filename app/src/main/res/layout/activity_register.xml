<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<include layout="@layout/include_toolbar"></include>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:textColor="@color/botones"
            android:textSize="@dimen/text_size_titles"
            android:text="Registro de Tags nuevos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:textColorHint="@color/colorPrimary"
            android:id="@+id/txt_alias_registro"
            android:layout_marginTop="30dp"
            android:hint="Alias ó Nombre Personalizado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_prefijos"/>
        <EditText
            android:textColorHint="@color/colorPrimary"
            android:maxLength="9"
            android:id="@+id/txt_numtar_registro"
            android:inputType="number"
            android:hint="Número de su Tag"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:elevation="@dimen/elevacion"
            android:layout_gravity="center"
            android:background="@color/botones"
            android:textColor="@color/fuentebotones"
            android:id="@+id/btn_continuar_registro"
            android:text="Continuar"
            android:layout_marginTop="30dp"
            android:layout_width="@dimen/AnchoBoton"
            android:layout_height="@dimen/altoBoton" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>